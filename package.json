{
  "name": "truck-packer-3d",
  "version": "1.0.0",
  "type": "module",
  "description": "A professional 3D truck packing visualization tool",
  "main": "index.html",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "test": "echo \"No tests yet\"",
    "stress:ui": "node tests/stress.spec.js",
    "lint:js": "eslint \"src/**/*.js\" \"index.html\" --report-unused-disable-directives",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:html": "html-validate --config .htmlvalidate.json index.html",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "typecheck": "tsc --noEmit --allowJs --checkJs",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "validate": "npm run lint && npm run format:check",
    "quality": "npm run lint:fix && npm run format && echo 'âœ… Code quality checks passed!'",
    "quality:ci": "npm run validate > cleanup/reports/quality-report.txt 2>&1 || true",
    "lint:report": "node cleanup/scripts/eslint-report.mjs"
  },
  "keywords": [
    "3d",
    "truck-packer",
    "three.js",
    "visualization",
    "logistics"
  ],
  "author": "360 Virtual Tour Solutions",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-plugin-html": "^8.1.2",
    "globals": "^15.13.0",
    "html-validate": "^8.24.1",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "stylelint": "^16.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
